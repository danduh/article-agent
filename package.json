{
  "name": "article-agent",
  "version": "1.0.0",
  "description": "AI agent for automated article writing with config-driven topics",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danduh/article-agent.git"
  },
  "keywords": [
    "ai",
    "article-writing",
    "nestjs",
    "langchain",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/danduh/article-agent/issues"
  },
  "homepage": "https://github.com/danduh/article-agent#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@langchain/anthropic": "^0.3.27",
    "@langchain/community": "^0.3.55",
    "@langchain/openai": "^0.6.11",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@types/markdown-it": "^14.1.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "duckduckgo-search": "^1.0.7",
    "langchain": "^0.3.33",
    "markdown-it": "^14.1.0",
    "openai": "^4.104.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.6",
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
